---
// Import the global stylesheet and necessary components
import '../styles/global.css';
import Header from '../components/Header.vue';
import About from '../components/About.vue';
import Experience from '../components/Experience.vue';
import Projects from '../components/Projects.vue';
import Footer from '../components/Footer.vue';
import Skills from '../components/Skills.vue';
import Publications from '../components/Publications.vue';
import Contact from '../components/Contact.vue';

// Define page metadata
const pageTitle = "Srijan Ray | Developer Portfolio";
const description = "Welcome to the portfolio of Srijan Ray, a computer science student specializing in AI, machine learning, and full-stack development.";

---
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{pageTitle}</title>
        <!-- Favicon Example -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    </head>
    <body class="bg-slate-50 text-slate-800 font-sans antialiased">

        <Header client:load />

        <main class="container mx-auto px-6">
            <!-- Hero Section -->
            <section class="text-center py-20 md:py-32">
                <h1 class="text-5xl md:text-7xl font-bold mb-4 leading-tight text-slate-900">
                    Hi, I'm Srijan Ray
                </h1>
                <p class="text-lg md:text-xl text-slate-600 max-w-3xl mx-auto">
                    Machine Learning and Software Development Engineer. Currently studying Computer Science at Georgia Tech.
                </p>
                <a href="#about" class="mt-8 inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
  Learn More
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-6 h-6 animate-bounce">
    <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
  </svg>
</a>

<a href="#contact" class="mt-8 inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
  Get In Touch
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
  </svg>
</a>
            </section>
        </main>

        <!-- About Section -->
        <About client:load />

        <!-- Experience Section -->
        <Experience client:load />

        <!-- Projects Section -->
        <Projects client:load />

        <Publications client:load />

        <Skills client:load />

        <Contact client:load />
    </body>
</html>

<style is:global>
body {
    font-family: 'Inter', sans-serif;
}
</style>
